# altering 'GITHUB_USER' variable using tr for macOS compatibility (bash 3.x doesn't support ,,)
export GITHUB_USER=$(echo "${GITHUB_USER}" | tr '[:upper:]' '[:lower:]')
export GITHUB_TOKEN=${GITHUB_TOKEN}
export GITHUB_REPO=${GITHUB_REPO}
export IMAGE_REPO=${IMAGE_REPO}
export IMAGE_VERSION=${IMAGE_VERSION:-test}
export COSIGN_PASSWORD=${COSIGN_PASSWORD}
